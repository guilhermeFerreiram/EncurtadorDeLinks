@model List<LinkModel>

@{
    ViewData["Title"] = "Lista de Links";
}

<div class="text-center">

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["MensagemSucesso"]
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["MensagemErro"]
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
        </div>
    }

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Link" asp-action="Criar">Encurtar novo Link</a>
    </div>

    <h1 class="display-4">Lista de Links</h1>

    <table class="table" id="table-links">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Link Original</th>
                <th scope="col">Link Encurtado</th>
                <th scope="col">Short Code</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null && Model.Any())
            {
                foreach (var link in Model)
                {
                    <tr>
                        <td scope="row">@link.Id</td>
                        <td>@link.Nome</td>
                        <td>@link.LinkOriginal</td>
                        <td>@link.LinkEncurtado</td>
                        <td>@link.ShortCode</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@link.Id" asp-controller="Link" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@link.Id" asp-controller="Link" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>